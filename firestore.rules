rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection:
    // - Anyone can create their own user document (sign-up).
    // - Only the authenticated user can read or update their own document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // User Progress Collection:
    // - A user can create, read, and update their own progress document.
    // - No one else can access it.
    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Global Announcements Collection:
    // - Anyone (including unauthenticated users) can read announcements.
    // - No one can write to this collection from the client-side. 
    //   (You must add/edit announcements from the Firebase Console).
    match /global_announcements/{announcementId} {
      allow read: if true;
      allow write: if false; 
    }
  }
}
