
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /global_announcements/{docId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /shortenedUrls/{alias} {
      allow read, create;
      allow update: if request.auth != null && request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2'; // Admin only
    }

    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /bugReports/{reportId} {
      // Allow user to create a report for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Allow user to read their own reports
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Admin Access Rules
      allow read, update, delete: if request.auth != null && request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2';
    }
  }
}
