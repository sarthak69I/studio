
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection: Publicly readable, but only the owner can write.
    match /users/{userId} {
      // Anyone can read user profiles (displayName, photoURL).
      allow read: if true;
      
      // Only the authenticated user can create or update their own document.
      allow write: if request.auth != null && request.auth.uid == userId;

      // Deletes are disallowed to preserve user data.
      allow delete: if false;
    }

    // User Progress Collection: Only the owner can read or write their own progress.
    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Global Announcements: Anyone can read, but nobody can write through the client.
    // Admin should manage this collection directly in the Firebase Console.
    match /global_announcements/{announcementId} {
      allow read: if true;
      allow write: if false; // Prevent client-side writes
    }
    
    // Feedback Collection:
    match /feedback/{feedbackId} {
      // Anyone can read feedback entries.
      allow read: if true;
      
      // Anyone can create a new feedback entry.
      allow create: if true;
      
      // No one can update or delete feedback to maintain integrity.
      allow update, delete: if false;
      
      // Replies Subcollection:
      match /replies/{replyId} {
        // Anyone can read replies.
        allow read: if true;
        
        // Anyone can create a new reply.
        allow create: if true;
        
        // No one can update or delete replies.
        allow update, delete: if false;
      }
    }
  }
}
