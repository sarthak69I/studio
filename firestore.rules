rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write their own data.
    // No one can read the full list of users.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Feedback can be created by anyone.
    // Feedback can be read by anyone.
    // Only admins (or a future role) should be able to delete. For now, restrict delete.
    match /feedback/{feedbackId} {
      allow read, create: if true;
      allow update, delete: if false; // Protect from public deletion

      // Replies can be created by anyone and read by anyone.
      match /replies/{replyId} {
        allow read, create: if true;
        allow update, delete: if false; // Protect from public deletion
      }
    }

    // Global announcements should be read-only for clients.
    // Only admins should write to this collection (managed via Firebase Console or an admin SDK).
    match /global_announcements/{announcementId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
