
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Feedback is public to read
    match /feedback/{feedbackId} {
      allow read: if true;
      // Users must be logged in to create feedback
      allow create: if request.auth != null;
      
      // Replies can be read by anyone
      match /replies/{replyId} {
        allow read: if true;
        // Users must be logged in to create replies
        allow create: if request.auth != null;
      }
    }

    // Announcements are read-only for clients
    match /global_announcements/{announcementId} {
        allow read: if true;
        allow write: if false; // Only allow writes from Firebase Console/Admin SDK
    }
  }
}
