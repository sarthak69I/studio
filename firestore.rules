
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for user profile data
    match /users/{userId} {
      // Anyone can read user profiles (for leaderboards, etc.)
      allow read: if true;

      // Only the authenticated user can create or update their own profile
      allow create, update: if request.auth.uid == userId;

      // Nobody can delete user profiles from the client
      allow delete: if false;
    }

    // Rules for user progress and leaderboard data
    match /userProgress/{userId} {
      // Anyone can read progress data for the public leaderboard
      allow read: if true;

      // An authenticated user can only write to their own progress document
      allow write: if request.auth.uid == userId;
    }
    
    // Default deny access to any other collections
    // You will need to add rules for any new collections you create
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
