
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read/write their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for URL shortener
    match /shortenedUrls/{alias} {
      // Anyone can read the long URL for redirection
      allow get; 
      // Anyone can create a new short URL
      allow create;
      // Click count is updated via a server-side increment, which is allowed by default.
    }
    
    // Rules for Bug Reports
    match /bugReports/{reportId} {
        // Logged-in users can create reports
        allow create: if request.auth != null;
        
        // Users can only read their own reports
        allow read: if request.auth != null && resource.data.userId == request.auth.uid;
        
        // Admin user can read/write any report
        allow read, write: if request.auth != null && request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2';
    }

    // Announcements can be read by anyone
    match /global_announcements/{announcementId} {
        allow read: if true;
        // Write access should be restricted to admins via the Firebase console or a secure backend.
        allow write: if false;
    }
  }
}
