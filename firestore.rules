
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to announcements
    match /global_announcements/{announcementId} {
      allow read: if true;
      allow write: if request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2'; // Admin only
    }

    // Rules for user data
    match /users/{userId} {
      // Any authenticated user can create their own user document
      allow create: if request.auth.uid == userId;
      // Users can only read and update their own data
      allow read, update: if request.auth.uid == userId;
    }

    // Rules for user progress
    match /userProgress/{userId} {
        // Users can create, read and update their own progress
        allow read, write: if request.auth.uid == userId;
    }
    
    // Rules for URL shortener
    match /shortenedUrls/{alias} {
        // Anyone can create a new short URL
        allow create: if true;
        // Anyone can read (for redirection)
        allow read: if true;
        // Anyone can update the click count
        allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['clickCount']);
    }

    // Rules for Bug Reports
    match /bugReports/{reportId} {
      // Admin can read/write all reports
      allow read, write: if request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2';
      
      // A user can create a report
      allow create: if request.auth.uid != null;
      
      // A user can read their own reports when querying by their userId.
      // This is the key rule that was incorrect before.
      allow list: if request.auth.uid == request.query.where.userId;
    }
  }
}
