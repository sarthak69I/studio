rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to be created and read by their owner.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow anyone to read announcements. Only admins can write them.
    match /global_announcements/{announcementId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2';
    }

    // --- FIX: Allow anyone to create and read shortened URLs ---
    match /shortenedUrls/{alias} {
      allow read, create, update: if true;
    }
    
    // User progress can only be read/written by the owning user.
    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- FIX: Correctly allow users to list their own reports ---
    match /bugReports/{reportId} {
        // Admins can read/update any report.
        // Users can read their own report.
        allow read, update: if request.auth != null && (request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2' || resource.data.userId == request.auth.uid);
        
        // Any authenticated user can create a report.
        allow create: if request.auth != null;
        
        // Allow list operations for admins (unrestricted) or for users querying their own reports.
        allow list: if request.auth != null && 
                    (request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2' || 
                     (request.query.where.size() > 0 && request.query.where.userId == request.auth.uid));
    }
  }
}
