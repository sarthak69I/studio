
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read for global announcements
    match /global_announcements/{announcementId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2'; // Admin only
    }

    // Allow users to read/write their own progress
    match /users/{userId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read/write their own progress document
    match /userProgress/{userId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for bug reports
    match /bugReports/{reportId} {
        // Allow any authenticated user to create a report
        allow create: if request.auth != null;
        
        // Allow a user to read their own reports
        // Allow an admin to read any report
        allow read: if (request.auth != null && request.auth.uid == resource.data.userId) || 
                     (request.auth != null && request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2');
        
        // Allow only admin to update (e.g., status, reply)
        allow update: if request.auth != null && request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2';
        
        // Allow only admin to delete
        allow delete: if request.auth != null && request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2';
    }

    // Rules for URL shortener
    match /shortenedUrls/{alias} {
      // Anyone can create a new short URL
      allow create: if true;
      // Anyone can read (to redirect)
      allow read: if true;
      // Anyone can update the click count
      allow update: if request.resource.data.clickCount == resource.data.clickCount + 1;
    }
  }
}
