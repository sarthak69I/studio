
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Open access for user data (for profile viewing on leaderboard)
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    // Progress data is private to the user
    match /userProgress/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Announcements are public
    match /global_announcements/{announcementId} {
      allow read: if true;
      allow write: if request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2'; // Admin only
    }

    // URL Shortener is public
    match /shortenedUrls/{alias} {
        allow read, write: if true;
    }

    // Bug Reports
    match /bugReports/{reportId} {
      // Anyone logged in can create a report.
      allow create: if request.auth != null;
      
      // Admin can read/write any report. A user can read their own report.
      allow read, write: if request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2' || request.auth.uid == resource.data.userId;
    }
  }
}
