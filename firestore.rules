
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection:
    // - Authenticated users can create their own user document upon signup.
    // - Only the authenticated user can read or update their own document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // User Progress Collection:
    // - Only the authenticated user can read or write their own progress document.
    match /userProgress/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Global Announcements Collection:
    // - Anyone can read announcements (even unauthenticated users).
    // - No one can write to this collection through the client app.
    //   (Updates must be made from the Firebase Console or a trusted backend).
    match /global_announcements/{announcementId} {
      allow read: if true;
      allow write: if false; // Protect from client-side writes
    }
  }
}
