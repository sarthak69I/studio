
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Feedback can be read by anyone, and created by anyone.
    // Replies can be created by anyone.
    match /feedback/{feedbackId} {
      allow read, create;
      
      match /replies/{replyId} {
        allow read, create;
      }
    }
    
    // Rules for the users collection
    match /users/{userId} {
      // A user can create their own document if they are signed in and the UID matches.
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // A user can read or update their own document if they are signed in and the UID matches.
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }
  }
}
