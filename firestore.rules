rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for User Profiles
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow users to create their own profile upon signup
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow users to update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for User Progress
    match /userProgress/{userId} {
      // Allow users to read and write to their own progress document
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rules for Bug Reports
    match /bugReports/{reportId} {
      // Admins can read/write all reports
      // Authenticated users can create reports
      // Users can read their own reports
      function isAdmin() {
        return request.auth != null && request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2';
      }

      allow read: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.userId);
      allow write: if isAdmin();
      allow create: if request.auth != null;
    }
    
    // Rules for Announcements
    match /global_announcements/{announcementId} {
        allow read: if true; // Everyone can read announcements
        allow write: if request.auth != null && request.auth.uid == 'JT6PeEV2i2VOd4jTqXM1x1ZzXFZ2'; // Only admin can write
    }
    
    // Rules for URL Shortener
    match /shortenedUrls/{alias} {
      // Anyone can read (to allow redirection)
      allow read: if true;
      // Anyone can create a new short link
      allow create: if true;
      // Only the creator or an admin should update/delete
      // For simplicity here, allowing any authenticated user to update click count
      allow update: if true;
    }
  }
}
